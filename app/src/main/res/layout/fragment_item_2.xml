<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txttieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#03ACF8"
            android:gravity="center"
            android:text="Tạp Hóa Tuấn Anh"
            android:textColor="#32E91E"
            android:textSize="30dp"
            android:layout_margin="2dp"
            />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:background="#FF181919"
            android:layout_margin="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tongg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#2196F3"
                            android:gravity="center"
                            android:text="Tong"
                            android:textColor="#ffff"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txttong"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#2196F3"
                            android:text=""
                            android:textColor="#ffff"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/txthuydon"
                        android:layout_width="328dp"
                        android:layout_height="79dp"
                        android:layout_weight="1.5"
                        android:background="#8BC34A"
                        android:gravity="center"
                        android:onClick="huydon_btn"
                        android:text="HUY DON"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtthanhtoan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:onClick="thanhtoan_btn"
                        android:text="THANH TOAN"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/icon"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>